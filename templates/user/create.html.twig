{% extends 'base.html.twig' %}

{% block header_title %}
	<h1>Cr√©er un utilisateur</h1>
{% endblock %}

{% block body %}
	{{ form_start(form, {'action' : path('user_create')}) }}
	<div class="row justify-content-evenly">
		<div class="col-lg-12 col-12">
			<div class="form-group">
				{{ form_label(form.username) }}
				{{ form_widget(form.username) }}
				<div class="text-danger font-weight-bold">{{ form_errors(form.username) }}</div>
			</div>
			<div class="form-group">
				{{ form_label(form.password.first) }}
				{{ form_widget(form.password.first) }}
				<div class="text-danger font-weight-bold">{{ form_errors(form.password.first) }}</div>
			</div>
			<div class="form-group">
				{{ form_label(form.password.second) }}
				{{ form_widget(form.password.second) }}
				<div class="text-danger font-weight-bold">{{ form_errors(form.password.second) }}</div>
			</div>
			<div class="form-group">
				{{ form_label(form.email) }}
				{{ form_widget(form.email) }}
				<div class="text-danger font-weight-bold">{{ form_errors(form.email) }}</div>
			</div>
			<div class="form-group">
				{{ form_label(form.roles) }}
				{{ form_widget(form.roles) }}
				<div class="text-danger font-weight-bold">{{ form_errors(form.roles) }}</div>
			</div>
			{{ form_rest(form) }}
			<button type="submit" class="btn btn-success pull-right">Ajouter</button>
			(*) : champs obligatoires
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
